	"version": "0.0.0",
	"packageManager": "pnpm@10.14.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
