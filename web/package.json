		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.545.0",
		"motion": "^12.23.12",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.63.0",
		"react-router-dom": "^7.9.4",
